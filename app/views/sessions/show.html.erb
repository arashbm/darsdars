<%- model_class = Session -%>
<div class="page-header">
  <h1>برنامه‌ی هفتگی <%= @course.topic %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd><%= @session.course_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start) %>:</strong></dt>
  <dd><%= nice_time @session.start %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finish) %>:</strong></dt>
  <dd><%= nice_time @session.finish %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instructor) %>:</strong></dt>
  <dd><%= @session.instructor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:session_type) %>:</strong></dt>
  <dd><%= @session.session_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weekday) %>:</strong></dt>
  <dd><%= weekday_name @session.weekday %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sessions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_session_path(@session), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              session_path(@session),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
